<?xml version="1.0"?>
<odoo>
    <data noupdate="0">
        <record id="ticket_card_mail_templates" model="mail.template">
            <field name="name">Ticket Send by Email</field>
            <field name="model_id" ref="mockdesk.model_helpdesk_ticket"/>
            <field name="email_from">{{ object.assign_to.email_formatted }}</field>
            <field name="email_to">{{ object.customer_id.email }}</field>
            <field name="subject">Ticket Card (Ref: {{ object.ref or n/a }})</field>
            <field name="body_html" type="html">
                <!-- CONTENT -->
                <div style="margin: 0px; padding: 0px">
                    <p style="margin:0px; padding:0px; font-size:13px">
                        Dear <t t-out="object.customer_id.name"/>
                        <br/>
                        <br/>
                        Your ticket had been created
                        <br/>
                        Here is your ticket with ref: <t t-out="object.ref or n/a"/>
                        <br/>
                        <br/>
                        Do not hesitate to contact us to ask question.
                    </p>
                </div>
            </field>
        </record>

         <record id="update_ticket_mail_templates" model="mail.template">
            <field name="name">Annpunce Ticket Update</field>
            <field name="model_id" ref="mockdesk.model_helpdesk_ticket"/>
            <field name="email_from">{{ object.assign_to.email_formatted }}</field>
            <field name="email_to">{{ object.customer_id.email }}</field>
            <field name="subject">Ticket Card (Ref: {{ object.ref or n/a }})</field>
            <field name="body_html" type="html">
                <!-- CONTENT -->
                <div style="margin: 0px; padding: 0px">
                    <p style="margin:0px; padding:0px; font-size:13px">
                        Dear <t t-out="object.customer_id.name"/>
                        <br/>
                        <br/>
                        Your ticket had been update to <t t-out="object.stage_id.name"/>
                        <br/>
                        <br/>
                        --Do not hesitate to contact us to ask question.
                    </p>
                </div>
            </field>
        </record>
    </data>
</odoo>
