<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!--    tree-view-->
    <record id="my_ticket_view_tree" model="ir.ui.view">
        <field name="name">my_ticket_view_tree</field>
        <field name="model">helpdesk.ticket</field>
        <field name="arch" type="xml">
            <tree
                  string="all_ticket_tree"
                  limit="10">
                <field name="priority" widget="priority"/>
                <field name="name"/>-
                <field name="assign_to" widget="many2one_avatar_user"/>
                <field name="phone"/>
                <field name="deadline" widget="remaining_days" string="Remaining Day"/>
                <field string="tags" name="tag_id" widget="many2many_tags" options="{'color_field': 'color'}"/>
            </tree>
        </field>
    </record>
    <!--    kanban-view-->
    <record id="my_ticket_view_kanban" model="ir.ui.view">
        <field name="name">my_ticket_view_kanban</field>
        <field name="model">helpdesk.ticket</field>
        <field name="arch" type="xml">

            <kanban records_draggable="1"
                    on_create="quick_create"
                    default_group_by="stage_id">
                <field name="id"/>
                <field name="name"/>
                <field name="email"/>
                <field name="priority"/>
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_global_click ">
                            <div class="o_kanban_details">
                                <strong class="o_kanban_record_title">
                                    <b>
                                        <field name="name"/>
                                    </b>
                                </strong>
                                <ul>
                                    <li>Email:
                                        <field name="email"/>
                                    </li>
                                    <li>
                                        <field name="priority" widget="priority"/>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>
    <!--    form-view-->
    <record id="my_ticket_view_form" model="ir.ui.view">
        <field name="name">my_ticket_view_form</field>
        <field name="model">helpdesk.ticket</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <!-- options="{'clickable':'1'}"-->
                    <field name="stage_id"
                           widget="statusbar"
                           statusbar_visible="draft,in_progress,done"
                           options="{'clickable':'1'}"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <label for="name" class="oe_edit_only"/>
                        <h1>
                            <field name="name" placeholder="Enter ticket name...."/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="assign_to" widget="many2one_avatar_user"/>
                            <field name="priority" widget="priority"/>
                            <field name="deadline" String="Deadline"/>
                            <field name="tag_id" widget="many2many_tags" options="{'color_field': 'color'}"/>
                        </group>
                        <group>
                            <field name="phone"/>
                            <field name="email"/>
                            <field name="cc"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Description">
                            <field name="description" placeholder="enter your prescription here"/>
                        </page>
                    </notebook>
                </sheet>
                <!-- Chatter-->
                <div class="oe_chatter">
                    <field name="message_follower_ids" groups="base.group_user"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!--    window-action-->
    <record id="all_ticket_action" model="ir.actions.act_window">
        <field name="name">All Tickets</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">helpdesk.ticket</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_sailing_face">
                Create new Ticket
            </p>
        </field>
    </record>

    <!-- This is all ticket menu has action -->
    <menuitem id="menu_all_ticket"
              name="All Tickets"
              action="all_ticket_action"
              parent="menu_ticket_master"
              sequence="1"/>


</odoo>