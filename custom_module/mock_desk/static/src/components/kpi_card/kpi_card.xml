<?xml version="1.0" encoding="UTF-8"?>
<templates>
    <t t-name="owl.KpiCard" owl="1">
        <div class="col-lg-3 rounded-lg m-0 p-0 cursor-pointer" data-aos="fade-right" data-aos-delay="150" t-on-click="()=>props.onClick()">
            <div class="border m-2 p-4 bg-white text-center" style="border-radius: 10px;">
                <div class="h2 text-dark" style="font-size: 48px">
                    <span t-esc="props.value" />
                </div>
                <div class="h3 text-muted">
                    <span t-esc="props.name" />
                </div>
                <div class="h3 mt-5">
                </div>
            </div>
        </div>
    </t>
</templates>