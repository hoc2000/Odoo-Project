<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="menu_ticket_form12" model="website.menu">
            <field name="name">Ticket</field>
            <field name="url">/ticket_webform</field>
            <field name="parent_id" ref="website.main_menu"/>
            <field name="sequence">55</field>
        </record>

        <template id="create_ticket" name="Create Ticket">
            <t t-call="website.layout">
                <div id="wrap" class="oe_structure oe_empty">
                    <section class="s_title o_colored_level o_cc o_cc2 oe_img_bg o_bg_img_center pt24 pb16"
                             data-vcss="001" data-snippet="s_title" data-name="Title"
                             style="background-image: url(&quot;/mock_desk/static/image/stretched-1920-1080-888534.png&quot;); position: relative;"
                             data-original-id="4646"
                             data-original-src="/web/image/4646-054a96b9/ghost%20of%20tsushima.jpg"
                             data-mimetype="image/jpeg" data-resize-width="1920" data-quality="59">
                        <div class="s_allow_columns o_container_small">
                            <ul style="text-align: center;">
                                <li>
                                    <h4 style="text-align: left;">
                                        <font style="font-size: 62px;"/>
                                        <font>
                                            <span style="font-size: 36px;"/>
                                        </font>
                                        <font class="text-white">
                                            <span style="font-size: 36px;">
                                                <strong>Created Ticket</strong>
                                            </span>
                                        </font>
                                        <br/>
                                    </h4>
                                </li>
                            </ul>
                        </div>
                    </section>

                    <section class="s_text_block pt40 pb40 o_colored_level" data-snippet="s_text_block" data-name="Text"
                             style="background-image: none;">
                        <div class="container s_allow_columns">
                            <p class="o_default_snippet_text">Welcome to our customer support center! To assist you in
                                resolving any issues and provide the best experience, we have established a
                                user-friendly ticket creation system for you.
                            </p>
                            <p>We are always here to assist you! Create a ticket now to initiate the support process.
                                Thank you for choosing us.
                            </p>
                        </div>
                    </section>
                    <section class=" s_website_form pt16 pb16 o_colored_level" data-vcss="001"
                             data-snippet="s_website_form"
                             data-name="Form" style="background-image: none;">
                        <div class="o_container_small">
                            <form action="/create/webticket" method="POST" enctype="multipart/form-data"
                                  class="o_mark_required" data-mark="*" data-pre-fill="true">
                                <!--csrf-->
                                <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>
                                <div class="s_website_form_rows row s_col_no_bgcolor">
                                    <div class="s_website_form_field mb-3 col-12 col-lg-6 s_website_form_custom s_website_form_required  "
                                         data-type="char" data-name="Field">
                                        <label class="col-form-label col-sm-auto s_website_form_label "
                                               style="width: 200px" for="name">
                                            <span class="s_website_form_label_content">Your Name</span>
                                            <span class="s_website_form_mark">*</span>
                                        </label>
                                        <div class="col-sm">
                                            <!-- data-fill-with auto add auth user -->
                                            <input type="text"
                                                   class="form-control s_website_form_input"
                                                   name="customer_name"
                                                   required="1" data-fill-with="name" id="name"/>
                                        </div>
                                    </div>
                                    <div class="s_website_form_field mb-3 col-12 col-lg-6 s_website_form_model_required"
                                         data-type="tel"
                                         data-name="Field">
                                        <label class="col-form-label col-sm-auto s_website_form_label "
                                               style="width: 200px" for="phone">
                                            <span class="s_website_form_label_content">Phone Number</span>
                                        </label>
                                        <div class="col-sm">
                                            <input type="tel"
                                                   class="form-control s_website_form_input"
                                                   name="phone"
                                                   data-fill-with="phone" id="phone"/>
                                        </div>
                                    </div>

                                    <div class="s_website_form_field mb-3 col-12 col-lg-6  s_website_form_model_required  "
                                         data-type="email" data-name="Field">
                                        <label class="s_website_form_label "
                                               style="width: 200px" for="mail">
                                            <span class="s_website_form_label_content">Your Email</span>
                                            <span class="s_website_form_mark">*</span>
                                        </label>
                                        <div class="col-sm">
                                            <input type="email"
                                                   class="form-control s_website_form_input"
                                                   name="email" required="true" data-fill-with="email"
                                                   id="mail"/>
                                        </div>
                                    </div>

                                    <div data-visibility-condition="" data-visibility-between=""
                                         class="s_website_form_field mb-3 col-12 col-lg-6 s_website_form_custom"
                                         data-type="char"
                                         data-name="Field">
                                        <label class="s_website_form_label " style="width: 200px" for="osk0xrky888">
                                            <span class="s_website_form_label_content">Job Title</span>
                                        </label>
                                        <input type="text" class="form-control s_website_form_input" name="job"
                                               placeholder="" id="job"
                                               data-fill-with="job"/>
                                    </div>

                                    <div class="s_website_form_field mb-3 col-12  s_website_form_model_required"
                                         data-type="char" data-name="Field">
                                        <label class="col-form-label col-sm-auto s_website_form_label "
                                               style="width: 200px" for="name">
                                            <span class="s_website_form_label_content">Ticket Subject</span>
                                            <span class="s_website_form_mark">*</span>
                                        </label>
                                        <div class="col-sm">
                                            <input type="text" name="name" t-att-value="name"
                                                   class="form-control s_website_form_input"
                                                   required="true" id="name"/>
                                        </div>
                                    </div>
                                    <div class="s_website_form_field mb-3 col-12 col-lg-4 s_website_form_model_required  "
                                         data-type="char" data-name="Field">
                                        <label
                                                class="col-form-label col-sm-auto s_website_form_label "
                                                style="width: 200px" for="project_id">
                                            <span class="s_website_form_label_content">Project</span>
                                            <span class="s_website_form_mark">*</span>
                                        </label>
                                        <div class="col-sm">
                                            <select type="text" class="form-select s_website_form_input"
                                                    name="project_id"
                                                    required="true" id="project_id">
                                                <t t-foreach='project_rec' t-as="project">
                                                    <option t-esc='project.project_name'
                                                            t-att-value='project.id'/>
                                                </t>
                                            </select>
                                        </div>
                                    </div>
                                    <div data-visibility-condition="" data-visibility-between=""
                                         class="s_website_form_field mb-3 col-12 s_website_form_custom col-lg-4"
                                         data-type="char" data-name="Field">
                                        <label class="s_website_form_label col-form-label col-sm-auto "
                                               style="width: 200px" for="o62esywb3oep">
                                            <span class="s_website_form_label_content">product_name</span>
                                        </label>
                                        <div class="col-sm">
                                            <select type="text" class="form-select s_website_form_input"
                                                    name="product_ticket_id"
                                                    required="true" id="product">
                                                <t t-foreach='product_rec' t-as="product">
                                                    <option t-esc='product.product_name'
                                                            t-att-value='product.id'/>
                                                </t>
                                            </select>
                                        </div>
                                    </div>

                                    <div class="s_website_form_field mb-3 col-12 col-lg-4"
                                         data-type="char" data-name="Field">
                                        <label
                                                class="col-form-label col-sm-auto s_website_form_label"
                                                style="width: 200px" for="priority">
                                            <span class="s_website_form_label_content">Priority</span>
                                        </label>
                                        <div class="col-sm">
                                            <select type="text"
                                                    class="form-select s_website_form_input"
                                                    name="priority"
                                                    id="priority">
                                                <option value="0">Not Rated</option>
                                                <option value="1">Minor</option>
                                                <option value="2">Major</option>
                                                <option value="3">Critical</option>
                                            </select>
                                        </div>
                                    </div>

                                    <!--                                    <div data-visibility-condition="" data-visibility-between=""-->
                                    <!--                                         class="s_website_form_field mb-3 col-12 s_website_form_custom col-lg-6"-->
                                    <!--                                         data-type="binary" data-name="Field">-->
                                    <!--                                        <label class="s_website_form_label " style="width: 200px" for="o38a37l4rnq6">-->
                                    <!--                                            <span class="s_website_form_label_content">Shared File</span>-->
                                    <!--                                        </label>-->
                                    <!--                                        <input type="file" class="form-control s_website_form_input" name="file"-->
                                    <!--                                               id="o38a37l4rnq6" data-fill-with="undefined"/>-->
                                    <!--                                    </div>-->

                                    <div class="s_website_form_field mb-3 col-12 s_website_form_custom s_website_form_required  "
                                         data-type="text" data-name="Field">
                                        <label
                                                class="col-form-label col-sm-auto s_website_form_label "
                                                style="width: 200px" for="description">
                                            <span class="s_website_form_label_content">Your Question</span>
                                            <span class="s_website_form_mark">*</span>
                                        </label>
                                        <div class="col-sm">
                                            <textarea
                                                    class="form-control s_website_form_input"
                                                    name="description"
                                                    required="1" id="description" rows="7"
                                                    t-options="{'widget': 'html'}"/>
                                        </div>
                                    </div>
                                    <div class="mb-0 py-2 col-12 s_website_form_submit" data-name="Submit Button">
                                        <button type="submit" class="btn btn-primary pull-left">Submit</button>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </section>
                </div>
            </t>
        </template>


        <record id="patient_thanks" model="website.page">
            <field name="name">Thanks</field>
            <field name="type">qweb</field>
            <field name="url">/ticket-thank-you</field>
            <field name="website_published">True</field>
            <field name="key">mock_desk.special_thanks</field>
            <field name="arch" type="xml">
                <t name="Thanks" t-name="mockdesk.special_thanks">
                    <t t-call="website.layout">
                        <div id="wrap">
                            <div class="container">
                                <h1>Thanks!</h1>
                                <div class="row">
                                    <div class="col-lg-8">
                                        <div class="alert alert-success" role="status">
                                            The Ticket has been Created successfully.
                                        </div>
                                        <p>
                                            Keep checking on your mail for ticket status
                                        </p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </t>
            </field>
        </record>

    </data>
</odoo>