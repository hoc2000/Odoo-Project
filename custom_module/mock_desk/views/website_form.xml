<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="menu_ticket_form12" model="website.menu">
            <field name="name">Support</field>
            <field name="url">/ticket_webform</field>
            <field name="parent_id" ref="website.main_menu"/>
            <field name="sequence">55</field>
        </record>

        <template id="create_ticket" name="Create Ticket">
            <t t-call="website.layout">
                <div id="wrap" class="oe_structure oe_empty">
                    <section class=" s_website_form pt16 pb16 o_colored_level" data-vcss="001"
                             data-snippet="s_website_form"
                             data-name="Form"
                             style="background-image: url('/mock_desk/static/image/form_ticket2.jpg');  background-repeat: no-repeat; background-size: auto;overflow-x: hidden;height: 100%; background-size: 100% 100%;">
                        <div class="container-fluid px-1 py-5 mx-auto">
                            <div class="row d-flex justify-content-center">
                                <div class="col-xl-7 col-lg-8 col-md-9 col-11">
                                    <div class="ticket-card card" style="border-radius:1.25rem;">
                                        <h1 style="text-align: center;">
                                            <font style="font-size: 62px; color: rgb(33, 16, 74);">Service Ticket
                                            </font>
                                            <font style="font-size: 62px;"/>
                                            <br/>
                                        </h1>
                                        <form action="/create/webticket" method="POST" enctype="multipart/form-data"
                                              class="o_mark_required" data-mark="*"
                                              data-pre-fill="true"
                                              style="padding-left:10rem">
                                            <!--csrf-->
                                            <input type="hidden" name="csrf_token"
                                                   t-att-value="request.csrf_token()"/>
                                            <!-- CUSTOMER INFORMATION -->
                                            <div class="s_website_form_rows row s_col_no_bgcolor">
                                                <div data-visibility-condition="" data-visibility-between=""
                                                     class="s_website_form_field mb-3 col-12 col-lg-5 s_website_form_custom"
                                                     data-type="tel"
                                                     data-name="Field">
                                                    <label class="s_website_form_label" style="width: 200px"
                                                           for="name">
                                                        <span class="s_website_form_label_content">Your Name</span>
                                                        <span style="color: red;" class="s_website_form_mark">*
                                                        </span>
                                                    </label>

                                                    <input type="text" class="form-control s_website_form_input"
                                                           name="customer_name" required="1"
                                                           placeholder="" id="name" data-fill-with="name"/>
                                                </div>

                                                <div data-visibility-condition="" data-visibility-between=""
                                                     class="s_website_form_field mb-3 col-12 col-lg-5 s_website_form_custom"
                                                     data-type="tel"
                                                     data-name="Field">
                                                    <label class="s_website_form_label " style="width: 200px"
                                                           for="phone">
                                                        <span class="s_website_form_label_content">Phone Number
                                                        </span>
                                                    </label>
                                                    <input type="tel" class="form-control s_website_form_input"
                                                           name="phone"
                                                           data-fill-with="phone"
                                                           id="phone"/>
                                                </div>

                                                <div data-visibility-condition="" data-visibility-between=""
                                                     class="s_website_form_field mb-3 col-12 s_website_form_model_required col-lg-5"
                                                     data-type="email"
                                                     data-name="Field">
                                                    <label class="s_website_form_label " style="width: 200px"
                                                           for="mail">
                                                        <span class="s_website_form_label_content">Your Email</span>
                                                        <span style="color: red;" class="s_website_form_mark">*
                                                        </span>
                                                    </label>
                                                    <input type="email" class="form-control s_website_form_input"
                                                           name="email"
                                                           required="true"
                                                           placeholder="" id="mail" data-fill-with="email"/>
                                                </div>

                                                <div data-visibility-condition="" data-visibility-between=""
                                                     class="s_website_form_field mb-3 col-12 s_website_form_custom col-lg-5"
                                                     data-type="char"
                                                     data-name="Field">
                                                    <label class="s_website_form_label " style="width: 200px"
                                                           for="o46wvhfl8w7v">
                                                        <span class="s_website_form_label_content">Your Company
                                                        </span>
                                                    </label>
                                                    <input type="text" class="form-control s_website_form_input"
                                                           name="company"
                                                           placeholder=""
                                                           id="company" data-fill-with="commercial_company_name"/>
                                                </div>

                                                <div data-visibility-condition="" data-visibility-between=""
                                                     class="s_website_form_field mb-3 col-12 col-lg-5 "
                                                     data-type="char"
                                                     data-name="Field">
                                                    <label class="s_website_form_label " style="width: 200px"
                                                           for="ookkfxk1lgsm">
                                                        <span class="s_website_form_label_content">Location /
                                                            Department
                                                        </span>
                                                    </label>
                                                    <input type="text" class="form-control s_website_form_input"
                                                           name="country"
                                                           required="true"
                                                           t-att-value='country_id.name' placeholder="" id="country"
                                                           data-fill-with=""/>
                                                </div>
                                                <!-- GENERAL INFOMATION INFO -->
                                                <div data-visibility-condition="" data-visibility-between=""
                                                     class="s_website_form_field mb-3 col-12 col-lg-10 s_website_form_custom s_website_form_model_required"
                                                     data-type="many2one" data-name="Field">
                                                    <label class="s_website_form_label " style="width: 200px"
                                                           for="project_select">
                                                        <span class="s_website_form_label_content">Project Name
                                                        </span>
                                                        <span style="color: red;" class="s_website_form_mark">*
                                                        </span>
                                                    </label>
                                                    <select class="form-select s_website_form_input"
                                                            name="project_id"
                                                            id="project_id" style="">
                                                        <option value=""/>
                                                        <t t-foreach='project_rec' t-as="project">
                                                            <option t-esc='project.project_name'
                                                                    t-att-value='project.id'/>
                                                        </t>
                                                    </select>
                                                </div>

                                                <div data-visibility-condition="" data-visibility-between=""
                                                     class="s_website_form_field mb-3 col-12 col-lg-5 s_website_form_custom"
                                                     data-type="many2one"
                                                     data-name="Field">
                                                    <label class="s_website_form_label " style="width: 200px"
                                                           for="product">
                                                        <span class="s_website_form_label_content">Product Name
                                                        </span>
                                                    </label>
                                                    <select class="hidden form-select s_website_form_input"
                                                            name="product_ticket_id"
                                                            id="product" style="">
<!--                                                        <option value=""/>-->
<!--                                                        <t t-foreach='product_rec' t-as="product">-->
<!--                                                            <option t-esc='product.product_name'-->
<!--                                                                    t-att-value='product.id'/>-->
<!--                                                        </t>-->
                                                    </select>
                                                </div>

                                                <div data-visibility-condition="" data-visibility-between=""
                                                     class="s_website_form_field mb-3 col-12 col-lg-5 s_website_form_custom"
                                                     data-type="many2one"
                                                     data-name="Field">
                                                    <label class="s_website_form_label " style="width: 200px"
                                                           for="version">
                                                        <span class="s_website_form_label_content">Software version
                                                        </span>
                                                    </label>
                                                    <select class="form-select s_website_form_input" name="product_version"
                                                            id="version"
                                                            style="">
                                                        <option value=""/>
                                                        <t t-foreach='version_rec' t-as="version">
                                                            <option t-esc='version.version_number'
                                                                    t-att-value='version.version_number'/>
                                                        </t>
                                                    </select>
                                                </div>

                                                <div data-visibility-condition="" data-visibility-between=""
                                                     class="s_website_form_field mb-3 col-12 col-lg-10 s_website_form_custom s_website_form_model_required"
                                                     data-type="char" data-name="Field">
                                                    <label class="s_website_form_label " style="width: 200px"
                                                           for="o97qpga8hrf6">
                                                        <span class="s_website_form_label_content">Ticket Problem
                                                            Title
                                                        </span>
                                                        <span style="color: red;" class="s_website_form_mark">*
                                                        </span>
                                                    </label>
                                                    <input type="text" class="form-control s_website_form_input"
                                                           name="name"
                                                           value="" placeholder=""
                                                           id="name" data-fill-with="undefined"/>
                                                </div>

                                                <div data-visibility-condition="" data-visibility-between=""
                                                     class="s_website_form_field mb-3 col-12 col-lg-10 s_website_form_custom"
                                                     data-type="selection"
                                                     data-name="Field">
                                                    <label class="s_website_form_label " style="width: 200px"
                                                           for="own1h9ovxheq">
                                                        <span class="s_website_form_label_content">Priority</span>
                                                    </label>
                                                    <div class="row s_col_no_resize s_col_no_bgcolor s_website_form_multiple"
                                                         data-name="Priority"
                                                         data-display="horizontal">

                                                        <div class="radio col-12 col-lg-4 col-md-6">
                                                            <div class="form-check">
                                                                <input type="radio"
                                                                       class="s_website_form_input form-check-input"
                                                                       id="priority"
                                                                       name="priority" value="1"/>
                                                                <label class="form-check-label s_website_form_check_label"
                                                                       for="own1h9ovxheq0">
                                                                    Minor
                                                                </label>
                                                            </div>
                                                        </div>
                                                        <div class="radio col-12 col-lg-4 col-md-6">
                                                            <div class="form-check">
                                                                <input type="radio"
                                                                       class="s_website_form_input form-check-input"
                                                                       id="priority"
                                                                       name="priority" value="2"/>
                                                                <label class="form-check-label s_website_form_check_label"
                                                                       for="own1h9ovxheq1">
                                                                    Major
                                                                </label>
                                                            </div>
                                                        </div>
                                                        <div class="radio col-12 col-lg-4 col-md-6">
                                                            <div class="form-check">
                                                                <input type="radio"
                                                                       class="s_website_form_input form-check-input"
                                                                       id="priority"
                                                                       name="priority" value="3"/>
                                                                <label class="form-check-label s_website_form_check_label"
                                                                       for="own1h9ovxheq2">
                                                                    Critical
                                                                </label>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>

                                                <div data-visibility-condition="" data-visibility-between=""
                                                     class="s_website_form_field mb-3 col-12 col-lg-4"
                                                     data-type="many2many"
                                                     data-name="Field">
                                                    <label class="s_website_form_label " style="width: 200px"
                                                           for="attachments">
                                                        <span class="s_website_form_label_content">Attachments
                                                        </span>
                                                    </label>
                                                    <input type="file" class="form-control s_website_form_input"
                                                           name="attachment_ids" multiple="1"
                                                           id="attachments" data-fill-with="undefined"/>
                                                </div>

                                                <div data-visibility-condition="" data-visibility-between=""
                                                     class="s_website_form_field mb-3 col-12 col-lg-10 s_website_form_custom"
                                                     data-type="text"
                                                     data-name="Field">
                                                    <label class="s_website_form_label " style="width: 200px"
                                                           for="o7u0h8glo1hm">
                                                        <span class="s_website_form_label_content">Descrption Issue
                                                        </span>
                                                    </label>
                                                    <textarea class="editor form-control s_website_form_input"
                                                              name="description"
                                                              placeholder=""
                                                              id="description_ticket" rows="7"/>
                                                </div>
                                                <div class="mb-0 py-2 col-12 s_website_form_submit"
                                                     data-name="Submit Button">
                                                    <button type="submit" class="btn btn-primary pull-left">Submit
                                                    </button>
                                                </div>
                                            </div>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </section>
                </div>
                <script src="https://cdn.ckeditor.com/ckeditor5/41.0.0/classic/ckeditor.js"></script>
                <script>
                        ClassicEditor
                                .create( document.querySelector( '#description_ticket' ) )
                                .then( editor => {
                                        console.log( editor );
                                } )
                                .catch( error => {
                                        console.error( error );
                                } );
                </script>
                <script type="text/javascript" src="/mock_desk/static/src/js/form_customer.js"/>
            </t>
        </template>


        <record id="patient_thanks" model="website.page">
            <field name="name">Thanks</field>
            <field name="type">qweb</field>
            <field name="url">/ticket-thank-you</field>
            <field name="website_published">True</field>
            <field name="key">mock_desk.special_thanks</field>
            <field name="arch" type="xml">
                <t name="Thanks" t-name="mockdesk.special_thanks">
                    <t t-call="website.layout">
                        <div id="wrap">
                            <div class="container">
                                <h1>Thanks!</h1>
                                <div class="row">
                                    <div class="col-lg-8">
                                        <div class="alert alert-success" role="status">
                                            The Ticket has been Created successfully.
                                        </div>
                                        <p>
                                            Keep checking on your mail for ticket status
                                        </p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </t>
            </field>
        </record>

    </data>
</odoo>