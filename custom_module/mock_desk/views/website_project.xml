<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="menu_project_list" model="website.menu">
            <field name="name">Project</field>
            <field name="url">/project</field>
            <field name="parent_id" ref="website.main_menu"/>
            <field name="sequence">3</field>
        </record>

        <template id="project_media_view" name="Project Media">
            <t t-call="website.layout">
                <div id="wrap" class="oe_structure oe_empty">
                    <section class="s_media_list pt32 pb32 o_cc o_cc2 o_colored_level" data-vcss="001"
                             data-snippet="s_media_list" data-name="Media List" style="background-image: none;">
                        <div class="container pb-4 pb-xl-7 pt-4">
                            <div class="row s_nb_column_fixed s_col_no_bgcolor">
                                <!--CARD-->
                                <t t-foreach="projects" t-as="project">
                                    <div class="col-lg-12 s_media_list_item pt16 pb16" data-name="Media item">
                                        <div class="row s_col_no_resize s_col_no_bgcolor g-0 align-items-center o_cc o_cc1 o_colored_level">
                                            <div class="col-lg-4 align-self-stretch s_media_list_img_wrapper">
                                                <img src="/web/image/website.s_media_list_default_image_1"
                                                     class="s_media_list_img h-100 w-100" alt="" loading="lazy"
                                                     data-original-id="240"
                                                     data-original-src="/website/static/src/img/snippets_demo/s_media_list_1.jpg"
                                                     data-mimetype="image/jpeg"/>
                                            </div>
                                            <div class="col-lg-8 s_media_list_body">
                                                <h3 class="o_default_snippet_text">
                                                    <t t-out="project.project_name"/>
                                                </h3>
                                                <ul style="list-style-type:disc">
                                                    <li>
                                                        <span class="mr-2">Project Manager:</span>
                                                        <t t-out="project.manager_id.name"/>
                                                    </li>
                                                    <li>
                                                        <span class="mr-2">Customer:</span>
                                                        <t t-out="project.partner_ids.name"/>
                                                    </li>
                                                </ul>
                                                <a t-attf-href="/project/#{project.id}"
                                                   class="btn btn-primary mb-2 o_default_snippet_text">
                                                    Discover
                                                </a>
                                            </div>
                                        </div>
                                    </div>
                                </t>
                            </div>
                        </div>
                    </section>
                </div>
                <div t-if="pager" class="o_portal_pager d-flex justify-content-center pb-4">
                    <t t-call="portal.pager"/>
                </div>
            </t>
        </template>
        <!--                DETAIL VIEW-->
        <template id="project_detail_view" name="Product Detail">
            <t t-call="website.layout">
                <div id="wrap" class="oe_structure oe_empty">
                    <section class="s_tabs pt48 pb48 o_colored_level">
                        <div class="container">
                            <div class="row align-items-center">
                                <div class="col-lg-6 pt16 pb16 o_colored_level">
                                    <img src="/web/image/website.s_image_text_default_image"
                                         class="img img-fluid mx-auto o_animate o_anim_slide_in o_anim_from_left o_visible"
                                         alt="" loading="eager" data-original-id="255"
                                         data-original-src="/website/static/src/img/snippets_demo/s_image_text.jpg"
                                         data-mimetype="image/jpeg" style="" data-bs-original-title="" title=""
                                         aria-describedby="tooltip40218"/>
                                </div>
                                <div class="col-lg-6 pt16 pb16 o_colored_level">
                                    <h2 class="o_default_snippet_text">
                                        <t t-out="project.project_name"/>
                                    </h2>
                                    <p class="o_default_snippet_text">
                                        <t t-raw="project.description_project"/>
                                    </p>
                                </div>
                            </div>
                        </div>

                    </section>
                    <section class="s_tabs pb48 o_colored_level">
                        <div class="container">
                            <div class="tab-content flickity-tab" id="pills-tabContent">
                                <div class="  mx-n4 flickity-button-outset"
                                     data-flickity='{"pageDots": true, "prevNextButtons": true, "cellAlign": "left", "wrapAround": true, "imagesLoaded": true}'>

                                    <!-- Card -->
                                    <t t-foreach="products" t-as="product">
                                        <div class="col-12 col-md-6 col-xl-4 col-wd-3 pb-4 pb-md-7 "
                                             style="padding-right:15px;padding-left:15px;">
                                            <div class="card card-border-hover border shadow-dark-hover p-2 lift sk-fade">
                                                <!-- Image -->
                                                <div class="card-zoom position-relative" t-if="product.image">
                                                    <a t-attf-href="/product/#{product.id}"
                                                       class="card-img sk-thumbnail d-block">
                                                        <img class="card-img-top"
                                                             t-att-src="image_data_uri(product.image)"
                                                             alt="..."/>
                                                    </a>
                                                </div>
                                                <div class="card-zoom position-relative" t-else="">
                                                    <a t-attf-href="/product/#{product.id}"
                                                       class="card-img sk-thumbnail d-block">
                                                        <img class="card-img-top"
                                                             src="/mock_desk/static/image/default_no_image.jpg"
                                                             alt="..."/>
                                                    </a>
                                                </div>
                                                <!-- Footer -->
                                                <div class="card-footer px-2 pb-2 mb-1 pt-4 position-relative">
                                                    <!-- Preheading -->
                                                    <a t-attf-href="/product/#{product.id}">
                                                        <span class="mb-1 d-inline-block text-gray-800">
                                                            <t t-out="product.category_id.name"/>
                                                        </span>
                                                    </a>
                                                    <!-- Heading -->
                                                    <div class="position-relative">
                                                        <a t-attf-href="/product/#{product.id}"
                                                           class="d-block stretched-link">
                                                            <h4 class="line-clamp-2 h-md-48 h-lg-58 me-md-6 me-lg-10 me-xl-4 mb-2">
                                                                <t t-out="product.product_name"/>
                                                            </h4>
                                                        </a>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </t>
                                </div>
                            </div>
                        </div>
                    </section>

                </div>
            </t>
        </template>

    </data>
</odoo>