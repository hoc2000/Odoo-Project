<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <!--    form-view-->
    <record id="ticket_solution_view_form" model="ir.ui.view">
        <field name="name">ticket.solution.view.form</field>
        <field name="model">solution.ticket.wizard</field>
        <field name="arch" type="xml">
            <form>
                <div class="d-flex flex-column">
                    <span class="text-muted">If you have a solution for this ticket. Please, share it with the
                        cutomer
                        or else you can just discard this
                    </span>
                    <span class="pt-4">
                        <field name="solution" placeholder="enter your solution here" nolabel="1" widget="html"/>
                    </span>
                </div>
                <footer>
                    <button name="action_cancel" string="Approve Solution" type="object" class="btn btn-primary"/>
                    <button string="Discard" special="cancel" class="btn btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>

    <!--window-action-->
    <record id="action_solution_ticket" model="ir.actions.act_window">
        <field name="name">Solution For Ticket</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">solution.ticket.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
</odoo>
